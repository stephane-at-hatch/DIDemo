digraph ModuleDependencies {
    rankdir=TB;
    ranksep=1.6;
    nodesep=0.8;
    pad=0.5;
    compound=true;
    concentrate=true;
    splines=spline;
    node [shape=box, style=filled, fontname="Helvetica"];

    subgraph cluster_utilities {
        label="Utilities";
        style=filled;
        color="#e8e8f8";

        ModularDependencyContainer [label="ModularDependencyContainer", fillcolor="#ccccf0"];
        ModularNavigation [label="ModularNavigation", fillcolor="#ccccf0"];
        SharedUI [label="SharedUI", fillcolor="#ccccf0"];
        UIComponents [label="UIComponents", fillcolor="#ccccf0"];
    }

    subgraph cluster_clients {
        label="Clients";
        style=filled;
        color="#e8f4f8";

        ImageLoader [label="ImageLoader", fillcolor="#cce7f0"];
        MovieDomain [label="MovieDomain", fillcolor="#cce7f0"];
        TMDBClient [label="TMDBClient", fillcolor="#cce7f0"];
        WatchlistDomain [label="WatchlistDomain", fillcolor="#cce7f0"];
    }

    subgraph cluster_screens {
        label="Screens";
        style=filled;
        color="#f8f4e8";

        BoxOfficeScreen [label="BoxOfficeScreen", fillcolor="#f0e7cc"];
        DetailScreen [label="DetailScreen", fillcolor="#f0e7cc"];
        DiscoverScreen [label="DiscoverScreen", fillcolor="#f0e7cc"];
        WatchlistScreen [label="WatchlistScreen", fillcolor="#f0e7cc"];
    }

    subgraph cluster_coordinators {
        label="Coordinators";
        style=filled;
        color="#f8e8f4";

        AppCoordinator [label="AppCoordinator", fillcolor="#f0cce7"];
        TabCoordinator [label="TabCoordinator", fillcolor="#f0cce7"];
    }

    subgraph cluster_macros {
        label="Macros";
        style=filled;
        color="#f4f8e8";

        CopyableMacro [label="CopyableMacro", fillcolor="#e7f0cc"];
        DependencyRequirementsMacro [label="DependencyRequirementsMacro", fillcolor="#e7f0cc"];
    }

    subgraph cluster_root {
        label="Root";
        style=filled;
        color="#f0f0f0";

        Modules [label="Modules", fillcolor="#e0e0e0"];
    }

    // Dependencies
    Modules -> ModularDependencyContainer;
    Modules -> TMDBClient;
    Modules -> ImageLoader;
    Modules -> MovieDomain;
    Modules -> WatchlistDomain;
    Modules -> AppCoordinator;
    AppCoordinator -> ModularDependencyContainer;
    AppCoordinator -> TabCoordinator;
    AppCoordinator -> TMDBClient;
    TabCoordinator -> ModularDependencyContainer;
    TabCoordinator -> BoxOfficeScreen;
    TabCoordinator -> DiscoverScreen;
    TabCoordinator -> WatchlistScreen;
    TabCoordinator -> ModularNavigation;
    BoxOfficeScreen -> ModularDependencyContainer;
    BoxOfficeScreen -> ModularNavigation;
    BoxOfficeScreen -> MovieDomain;
    BoxOfficeScreen -> ImageLoader;
    BoxOfficeScreen -> DetailScreen;
    BoxOfficeScreen -> UIComponents;
    BoxOfficeScreen -> SharedUI;
    DiscoverScreen -> ModularDependencyContainer;
    DiscoverScreen -> ModularNavigation;
    DiscoverScreen -> MovieDomain;
    DiscoverScreen -> ImageLoader;
    DiscoverScreen -> DetailScreen;
    DiscoverScreen -> UIComponents;
    DiscoverScreen -> SharedUI;
    DetailScreen -> ModularDependencyContainer;
    DetailScreen -> ModularNavigation;
    DetailScreen -> MovieDomain;
    DetailScreen -> WatchlistDomain;
    DetailScreen -> ImageLoader;
    DetailScreen -> UIComponents;
    DetailScreen -> SharedUI;
    WatchlistScreen -> ModularDependencyContainer;
    WatchlistScreen -> ModularNavigation;
    WatchlistScreen -> WatchlistDomain;
    WatchlistScreen -> ImageLoader;
    WatchlistScreen -> DetailScreen;
    WatchlistScreen -> UIComponents;
    WatchlistScreen -> SharedUI;
    MovieDomain -> TMDBClient;
    ModularDependencyContainer -> DependencyRequirementsMacro;
    SharedUI -> ImageLoader;
    UIComponents -> CopyableMacro;
}